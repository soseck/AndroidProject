<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="356dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:width="100dp"
        android:height="100dp"
        android:text="Votre declaration a bien été envoyée !"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageInfo"
        android:layout_width="187dp"
        android:layout_height="224dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="180dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="161dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dateInfo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:layout_weight="1"
        android:shadowRadius="2"
        android:text="TitreIncident"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Info"
        android:layout_width="161dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/titleInfo"
        android:layout_below="@+id/titleInfo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:gravity="center_vertical"
        android:lines="3"
        android:text="Description"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lieu"
        android:layout_width="134dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="272dp"
        android:width="100dp"
        android:height="100dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="201dp"
        android:layout_height="22dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="348dp"

        android:width="100dp"
        android:height="100dp"
        android:text="Souhaitez-vous la partager ?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageMsg"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="384dp"
        android:background="@color/colorWhite"
        android:onClick="sendSMS"
        android:text="SMS"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <Button
        android:id="@+id/tweetButton"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="384dp"
        android:background="@color/colorWhite"
        android:onClick="tweet"
        android:text="Tweeter"
        android:textColor="@color/tw__blue_default"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        android:text="Importance"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/imageInfo"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/lieu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="Importance"
        app:layout_constraintBottom_toTopOf="@+id/imageMsg"
        app:layout_constraintEnd_toStartOf="@+id/imp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lieu" />


</android.support.constraint.ConstraintLayout>