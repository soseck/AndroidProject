<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="316dp"
        android:layout_height="98dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:width="100dp"
        android:height="100dp"
        android:text="Votre declaration a bien été envoyé"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageInfo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="232dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="Importance: "
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgence"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dateInfo"
        android:layout_marginTop="76dp"
        android:layout_weight="1"
        android:shadowRadius="2"
        android:text="TitreIncident"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Info"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleInfo"
        android:layout_below="@+id/titleInfo"
        android:layout_marginStart="108dp"
        android:layout_marginTop="192dp"
        android:gravity="center_vertical"
        android:lines="3"
        android:text="Description"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imp"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="268dp"
        android:width="100dp"
        android:height="100dp"
        android:text="Importance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lieu"
        android:layout_width="261dp"
        android:layout_height="33dp"
        android:layout_marginTop="284dp"

        android:width="100dp"
        android:height="100dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Description:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <TextView
        android:layout_width="316dp"
        android:layout_height="26dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="324dp"
        android:width="100dp"

        android:height="100dp"
        android:text="Souhaitez-vous la partager ?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageMsg"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="384dp"
        android:background="@color/white"
        android:onClick="sendSMS"
        android:text="SMS"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <Button
        android:id="@+id/tweetButton"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="384dp"
        android:background="@color/colorWhite"
        android:onClick="tweet"
        android:text="Tweeter"
        android:textColor="@color/tw__blue_default"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/mail"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="384dp"
        android:background="@color/colorWhite"
        android:onClick="sendMail"
        android:text="Email"
        android:textColor="@color/tw__blue_default"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





</android.support.constraint.ConstraintLayout>