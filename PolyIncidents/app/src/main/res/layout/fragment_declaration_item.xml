<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="61dp"
            android:layout_toStartOf="@+id/tagInfo"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/tagInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/locationInfo"
            android:text="TextView" />

        <TextView
            android:id="@+id/locationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/dateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleInfo"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/urgenceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tagInfo"
            android:layout_alignTop="@+id/dateInfo"
            android:text="TextView" />

        <TextView
            android:id="@+id/importanceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/urgenceInfo"
            android:text="TextView" />

        <TextView
            android:id="@+id/contentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleInfo"
            android:text="TextView" />

        <TextView
            android:id="@+id/authorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dateInfo"
            android:layout_alignEnd="@+id/contentInfo"
            android:text="TextView" />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageInfo"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_launcher" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimary">

    </RelativeLayout>

</LinearLayout>
