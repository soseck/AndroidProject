<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageInfo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/titleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/dateInfo"
            android:layout_weight="1"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="TitreIncident"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/contentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/titleInfo"
            android:layout_below="@+id/titleInfo"
            android:lines="3"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/dateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contentInfo"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="jj/mm/aaaa"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>

    </RelativeLayout>

